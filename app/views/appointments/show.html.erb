<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4 text-center">Appointment Details</h1>

      <div class="mb-3">
        <strong>Patient:</strong>
        <%= @appointment.patient.first_name %> <%= @appointment.patient.last_name %>
      </div>

      <div class="mb-3">
        <strong>Doctor:</strong>
        <%= @appointment.doctor.first_name %> <%= @appointment.doctor.last_name %>
      </div>

      <div class="mb-3">
        <strong>Date:</strong>
        <%= @appointment.date %>
      </div>

      <div class="mb-3">
        <strong>Notes:</strong>
        <%= @appointment.notes %>
      </div>

      <div class="actions">
        <%= link_to 'Edit', edit_appointment_path(@appointment), class: 'btn btn-primary me-2' %>
        <%= link_to 'Back to Appointments', appointments_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
