<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4 text-center">New Patient</h1>

      <%= form_with(model: @patient, url: patients_path, local: true, html: { class: 'form-horizontal' }) do |form| %>
        <% if @patient.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h4><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h4>
            <ul>
              <% @patient.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :first_name, class: 'form-label' %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, class: 'form-label' %>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :age, class: 'form-label' %>
          <%= form.number_field :age, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :contact_number, class: 'form-label' %>
          <%= form.telephone_field :contact_number, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :address, class: 'form-label' %>
          <%= form.text_area :address, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :medical_history, class: 'form-label' %>
          <%= form.text_area :medical_history, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= form.submit class: 'btn btn-primary' %>
          <%= link_to 'Back', 'javascript:history.back()', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
